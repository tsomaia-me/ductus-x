{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES5",
    "downlevelIteration": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "incremental": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "baseUrl": "./src",
    "paths": {
      "ductus": ["../../../src/index.ts"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
